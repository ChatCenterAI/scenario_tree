  style(scoped, type='less').
    :scope {
      width: 100%;
      min-height: 100vh;
      background: #f8f8f8 !important;
      .wrap-page {
        margin: 0 auto;
        display: block;
        width: 90%;
        max-width: 1024px;
        .label {
          font-size: 16px;
          font-weight: 400;
          text-align: 0.6px;
        }
        .wrap-projects {
          .wrap-add-project {
            cursor: pointer;
            width: 31%;
            height: 200px;
            filter: drop-shadow(2px 2px 2px rgba(0,0,0,0.5));
            border-radius: 3px;
            background: #FFF;
            p {
              text-align: center;
            }
          }
        }
        #projectDummy {
          width: 31%;
          display: none;
        }
      }
    }

  script.

    var self = this;

    this.addProject = function(){
      $('util-modal').fadeIn(400);
      riot.mount('modal-window-content', 'module-modal-create-project');
      riot.update();
    }

    this.on('mount', function(){

    });

    this.loadProjects = async ()=>{
      
      var projects = await service.db.collection("projects")
        .where('author', '==', session.user.uid)
        .get().then(function(querySelectors){
          var projects = [];
          querySelectors.forEach(function(doc) {
            var data = doc.data();
            data.id = doc.id;
            projects.push(data);
          });
          return projects;
        });

      self.projects = projects;
      self.update();

      $('#loading').fadeOut(400);
      $('#loadingForModal').fadeOut(400);

      // プロジェクトの数+1が３の倍数の時にダミーを出す
      if((projects.length+1)%3 == 2) $('#projectDummy').show();
    }

    $('#loading').fadeIn(400);
    riot.loadProjectsTimer = setInterval(function(){
      if(session.user){
        clearInterval(riot.loadProjectsTimer);
        self.loadProjects();
      }
    }, 800);
    

    
    