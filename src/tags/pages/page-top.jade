page-top
  div.wrap-page.py40
    p.label.mb20 Recent Projects
    div.wrap-projects.f.flex-between
      div(onclick='{addProject}').wrap-add-project.f.fh
        div
          img(src='./img/icon/add.svg')
          p Add Project
      module-project(each='{item in projects}' content='{item}')
