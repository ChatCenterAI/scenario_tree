item-conversation-input-message
  div.wrap-item.f.fm.flex-between.px8
    textarea(placeholder='Message')#conversationMessageInput.pt2.pb3.px5.mr8
    div(onclick='{send}').wrap-send.f.fh
      img(src='./img/icon/send.svg')


  style(scoped, type='less').
    :scope {
      width: 100%;
      .wrap-item {
        width: 100%;
        height: 36px;
        border-top: solid rgba(0,0,0,0.4) 0.5px;
        textarea {
          border: solid rgba(0,0,0,0.4) 0.5px;
          border-radius: 3px;
          width: 100%;
          height: 24px;
          outline: none;
          resize: none;
          font-size: 12px;
        }
        .wrap-send {
          height: 100%;
          img {
            cursor: pointer;
            width: 20px;
          }
        }
      }
    }


  script.

    var self = this;

    this.send = function(){
      var textarea = document.getElementById('conversationMessageInput');
      var text = textarea.value;

      if(text=='') return;

      var isMine = true;
      addMessageToConversationByEvent({
        text: text,
      }, isMine);
      textarea.value = '';
    }